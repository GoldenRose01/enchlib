# =============================================================================
# EnchCompatibility.config - Compatibilità Incantesimi con Strumenti
# =============================================================================
# Formato: enchantmentId=group1,group2,group3
# 
# Definisce con quali gruppi di strumenti è compatibile ogni incantesimo.
# Supporta gruppi multi-livello e tag personalizzati.
# 
# Gruppi disponibili:
# - tools          : Tutti gli strumenti (picconi, asce, pale, zappe)
# - pickaxes       : Solo picconi
# - axes           : Solo asce  
# - shovels        : Solo pale
# - hoes           : Solo zappe
# - swords         : Spade
# - weapons        : Armi (spade, archi, balestre, tridenti)
# - armor          : Armature (elmi, corazze, gambali, stivali)
# - head_armor     : Solo elmi
# - chest_armor    : Solo corazze
# - leg_armor      : Solo gambali
# - foot_armor     : Solo stivali
# - bows           : Archi
# - crossbows      : Balestre
# - tridents       : Tridenti
# - books          : Libri incantati
# 
# Puoi anche specificare item specifici usando il loro ID completo
# es: minecraft:diamond_sword
# 
# Linee che iniziano con # sono commenti e vengono ignorate
# =============================================================================

# Incantesimi Armi da Mischia
minecraft:sharpness=swords,axes
minecraft:smite=swords,axes
minecraft:bane_of_arthropods=swords,axes
minecraft:knockback=swords
minecraft:fire_aspect=swords
minecraft:looting=swords
minecraft:sweeping_edge=swords

# Incantesimi Strumenti
minecraft:efficiency=tools
minecraft:silk_touch=tools
minecraft:fortune=tools
minecraft:unbreaking=tools,weapons,armor,bows,crossbows,tridents,books

# Incantesimi Arco
minecraft:power=bows
minecraft:punch=bows
minecraft:flame=bows
minecraft:infinity=bows

# Incantesimi Balestra
minecraft:quick_charge=crossbows
minecraft:multishot=crossbows
minecraft:piercing=crossbows

# Incantesimi Protezione
minecraft:protection=armor
minecraft:fire_protection=armor
minecraft:blast_protection=armor
minecraft:projectile_protection=armor
minecraft:feather_falling=foot_armor
minecraft:thorns=armor
minecraft:depth_strider=foot_armor
minecraft:frost_walker=foot_armor
minecraft:soul_speed=foot_armor

# Incantesimi Tridente
minecraft:loyalty=tridents
minecraft:impaling=tridents
minecraft:riptide=tridents
minecraft:channeling=tridents

# Incantesimi Universali
minecraft:mending=tools,weapons,armor,bows,crossbows,tridents

# Maledizioni
minecraft:binding_curse=armor
minecraft:vanishing_curse=tools,weapons,armor,bows,crossbows,tridents

# =========================================================================
